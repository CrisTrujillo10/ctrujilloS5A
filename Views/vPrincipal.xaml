<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ctrujilloS5A.Views.vPrincipal"
             Title="vPrincipal"
             >
    <VerticalStackLayout
        Padding="20"
        Spacing="20">
        <Label           
            Text="SEMANA 8 SQLITE"
            VerticalOptions="Center"
            FontSize="20"
            HorizontalOptions="Center" />

        <Entry
            x:Name="txtNombre"
            Placeholder="Ingrese el nombre"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
                    
        <Button
            x:Name="btnInsertar"
            Text="Insertar datos"
            Clicked="btnInsertar_Clicked"
            Grid.Row="0"
            Grid.Column="0"/>

        <Label
             x:Name="statusMessage"
             FontSize="18"
             TextColor="Red"
             Grid.Row="1"
             Grid.Column="0"/>

        <Button
            x:Name="btnListar"
            Text="Listar personas"
            Clicked="btnListar_Clicked"
            Grid.Row="2"
            Grid.Column="0"/>

            <CollectionView
                
             x:Name="listPersonas"
             Grid.Row="3"
             Grid.Column="0">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Label Text="{Binding Id}"
                                   Grid.Column="0"/>
                            <Label Text="{Binding Name}"
                                   Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </VerticalStackLayout>
</ContentPage>